# ===== OpenAI =====
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini
OPENAI_EMBED_MODEL=text-embedding-3-small

# ===== LangSmith (optional: observability + evaluation) =====
# If empty, the project still runs locally. Set to enable tracing/evals in LangSmith.
LANGSMITH_TRACING=false
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=retail-rag-sim

# ===== Retrieval =====
DOCS_DIR=./data/docs
CHROMA_DIR=./data/chroma
RERANK_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
TOP_K_RETRIEVE=10
TOP_K_RERANK=5
CONFIDENCE_THRESHOLD=0.55

# ===== Database =====
DB_URL=sqlite:///./data/retail.db

# ===== Dummy tools API =====
DUMMY_API_BASE_URL=http://localhost:8001

# ===== Gmail SMTP (optional notifications) =====
